<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    tools:layout_width="wrap_content"
    tools:layout_height="wrap_content">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="@dimen/edit_text_width"
        android:id="@+id/field_username"
        android:autoText="false"
        android:editable="true"
        android:hint="username"
        android:gravity="center"
        android:singleLine="true"
        android:inputType="text"
        tools:layout_width="wrap_content"
        tools:layout_height="wrap_content"
        android:layout_marginTop="142dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="@dimen/edit_text_width"
        android:id="@+id/field_password"
        android:password="true"
        android:singleLine="true"
        android:selectAllOnFocus="true"
        android:hint="password"
        android:gravity="center"
        tools:layout_width="wrap_content"
        tools:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/field_username"
        android:layout_alignStart="@+id/field_username"
        android:layout_marginLeft="32dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/button_login"
        android:gravity="center"
        android:layout_alignStart="@+id/field_password"
        android:clickable="true"
        android:layout_alignParentStart="false"
        android:layout_alignWithParentIfMissing="false"
        tools:layout_width="wrap_content"
        tools:layout_height="wrap_content"/>
        <!-- android:layout_alignEnd="@+id/field_password"
        android:layout_above="@+id/field_password"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="247dp" /> -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button_register"
        android:gravity="center"
        android:clickable="true"
        android:layout_alignStart="@+id/button_login"
        tools:layout_width="wrap_content"
        tools:layout_height="wrap_content"/>
       <!-- android:layout_alignEnd="@+id/button_login"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:layout_above="@+id/button_login"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="247dp" /> -->

</RelativeLayout>
